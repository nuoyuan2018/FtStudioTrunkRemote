<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topbar_height"
    android:background="@color/colorPrimary"
    android:gravity="center">

    <ImageView
        android:id="@+id/txt_left"
        android:layout_width="34dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:padding="7.5dp"
        android:src="@drawable/home_note_selector" />

    <LinearLayout
        android:id="@+id/line_mid"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/home_border"
        android:gravity="center"
        android:minWidth="80dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="2dp"
            android:src="@drawable/icon_select_note" />

        <TextView
            android:id="@+id/txt_mid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_12sp" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fra_members"
        android:layout_width="34dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp">


        <FrameLayout
            android:id="@+id/fra_img"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:visibility="gone">

            <cn.ftoutiao.account.android.activity.mine.view.CircleImageView
                android:id="@+id/img_cir_members"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txt_mem_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_10sp" />

        </FrameLayout>

        <ImageView
            android:id="@+id/txt_right"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:padding="6.5dp"
            android:src="@drawable/home_share_selector" />

    </FrameLayout>


</RelativeLayout>
